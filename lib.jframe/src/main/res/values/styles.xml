<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="JFrameDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="JFrameDialogDefaultAnim">
        <item name="android:windowEnterAnimation">@anim/j_dialog_defalut_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/j_dialog_defalut_exit_anim</item>
    </style>

</resources>